  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "strict": true,
    "verbatimModuleSyntax": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "#/*": ["./src/*"]
    },
    "skipLibCheck": true
  }
}
